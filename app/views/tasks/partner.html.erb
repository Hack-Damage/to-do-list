<script>
	// Switch between User and Partners tasks. 
	$('.inactiveSwitch').click(function() {
		var $this = $(this);
		if(!$this.hasClass('inactiveSwitch'))
			$('.inactiveSwitch').toggleClass('inactiveSwitch').toggleClass("activeSwitch");
			$('.activeSwitch').toggleClass('activeSwitch').toggleClass("inactiveSwitch");
			$this.toggleClass("inactiveSwitch").toggleClass("activeSwitch");
	});
	$('.activeSwitch').click(function() {
		var $this = $(this);
		if(!$this.hasClass('inactiveSwitch'))
			$('.inactiveSwitch').toggleClass('inactiveSwitch').toggleClass("activeSwitch");
			$('.activeSwitch').toggleClass('inactiveSwitch').toggleClass("activeSwitch");
			$this.toggleClass("activeSwitch").toggleClass("inactiveSwitch");
	});
	// Switch between task done and not done.
	// make the delete button appear
	$('.notDoneTask').click(function(){
		$(this).toggleClass('doneTask').toggleClass('notDoneTask');
